{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "api/*": ["./api/*"],
      "components/*": ["./components/*"],
      "store/*": ["./store/*"],
      "views/*": ["./views/*"],
      "utils/*": ["./utils/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
